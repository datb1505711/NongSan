<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/RelativeTopDetails"
        android:layout_width="match_parent"
        android:background="@color/topcolor"
        android:layout_height="55dp">
        <ImageButton
            android:id="@+id/imgbtnBackToXembaiviet"
            android:layout_width="55dp"
            android:src="@drawable/iconback"
            android:background="@color/topcolor"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/imgbtnBackToXembaiviet"
            android:text="Xem Bài Viết"
            android:textSize="32sp"
            android:gravity="center"
            android:layout_marginEnd="35dp"
            android:textColor="#000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RelativeDescrice"
        android:layout_below="@+id/RelativeTopDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtTieudedetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề"
            android:textSize="32sp"
            android:gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/imgSanphamdetails"
            android:layout_below="@+id/txtTieudedetails"
            android:layout_margin="5dp"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <TextView
            android:id="@+id/txtNgaydangdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTieudedetails"
            android:layout_toRightOf="@+id/imgSanphamdetails"
            android:layout_marginBottom="30dp"
            android:textSize="16sp"
            android:text="Ngày đăng: "/>
        <TextView
            android:id="@+id/txtTinhthanhdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNgaydangdetail"
            android:layout_toRightOf="@+id/imgSanphamdetails"
            android:textSize="16sp"
            android:layout_marginBottom="30dp"
            android:text="Tỉnh thành: "/>
        <TextView
            android:id="@+id/txtLoaisoanphamdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTinhthanhdetail"
            android:layout_toRightOf="@+id/imgSanphamdetails"
            android:textSize="16sp"
            android:layout_marginBottom="30dp"
            android:text="Loại : "/>
        <TextView
            android:id="@+id/txtGiasanphamdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLoaisoanphamdetail"
            android:layout_toRightOf="@+id/imgSanphamdetails"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:text="Giá : "/>
        <TextView
            android:id="@+id/txtmotadetals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imgSanphamdetails"
            android:layout_margin="20dp"
            android:text="Mô tả: "/>



    </RelativeLayout>
</RelativeLayout>